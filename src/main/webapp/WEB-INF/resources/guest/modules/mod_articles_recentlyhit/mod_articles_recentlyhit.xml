<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.7"
	client="site"
	method="upgrade">
	<name>MOD_ARTICLES_RECENTLYHIT</name>
	<author>Jesus Vargas</author>
	<creationDate>Jan 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>jesus@vargas.co.cr</authorEmail>
	<authorUrl>joomla.vargas.co.cr</authorUrl>
	<version>1.1.0</version>
	<description>MOD_RECENTLYHIT_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_articles_recentlyhit">mod_articles_recentlyhit.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>thumbs</folder>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB.mod_articles_recentlyhit.ini</language>
		<language tag="en-GB">languages/en-GB.mod_articles_recentlyhit.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_RECENTLYHIT_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					default="5"
					label="MOD_RECENTLYHIT_FIELD_COUNT_LABEL"
					description="MOD_RECENTLYHIT_FIELD_COUNT_DESC" />

				<field
					name="ordering"
					type="list"
					default="a.publish_up"
					label="MOD_RECENTLYHIT_FIELD_ORDERING_LABEL"
					description="MOD_RECENTLYHIT_FIELD_ORDERING_DESC">

					<option
						value="a.publish_up">MOD_RECENTLYHIT_FIELD_ORDERING_PUBLISHED_DATE</option>
					<option
						value="a.created">MOD_RECENTLYHIT_FIELD_ORDERING_CREATED_DATE</option>
					<option
						value="a.ordering">MOD_RECENTLYHIT_FIELD_ORDERING_ORDERING</option>
					<option
						value="rand()">MOD_RECENTLYHIT_FIELD_ORDERING_RANDOM</option>
				</field>
				
				<field
					name="current"
					type="radio"
					default="1"
					label="MOD_RECENTLYHIT_FIELD_CURRENT_LABEL"
					description="MOD_RECENTLYHIT_FIELD_CURRENT_DESC">
					<option
						value="1">JYES</option>
					<option
						value="0">JNO</option>
				</field>
				
				<field
					name="time_ago"
					type="radio"
					default="0"
					label="MOD_RECENTLYHIT_FIELD_SHOW_TIME_LABEL"
					description="MOD_RECENTLYHIT_FIELD_SHOW_TIME_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				
				<field name="show_image" type="radio" default="0"
					label="MOD_RECENTLYHIT_FIELD_SHOW_IMAGE_LABEL"
					description="MOD_RECENTLYHIT_FIELD_SHOW_IMAGE_DESC"
				>
					<option value="1">JSHOW
					</option>
					<option value="0">JHIDE
					</option>
				</field>
				
				
				<field name="thumb_width" type="text" default="60"
					label="MOD_RECENTLYHIT_FIELD_THUMB_WIDTH_LABEL"
					description="MOD_RECENTLYHIT_FIELD_THUMB_WIDTH_DESC"
				/>
				
				<field name="thumb_height" type="text" default="60"
					label="MOD_RECENTLYHIT_FIELD_THUMB_HEIGHT_LABEL"
					description="MOD_RECENTLYHIT_FIELD_THUMB_HEIGHT_DESC"
				/>

				<field name="thumb_image" type="radio" default="1"
					label="MOD_RECENTLYHIT_FIELD_THUMB_IMAGE_LABEL"
					description="MOD_RECENTLYHIT_FIELD_THUMB_IMAGE_DESC"
				>
					<option value="1">JYES
					</option>
					<option value="0">JNO
					</option>
				</field>
					
				<field name="thumb_proportions" type="list" default="bestfit"
					label="MOD_RECENTLYHIT_FIELD_THUMB_PROPORTIONS_LABEL"
					description="MOD_RECENTLYHIT_FIELD_THUMB_PROPORTIONS_DESC"
				>
					<option value="bestfit">MOD_RECENTLYHIT_OPTION_PROP_BEST_FIT</option>
					<option value="crop">MOD_RECENTLYHIT_OPTION_PROP_CROP</option>
					<option value="only_cut">MOD_RECENTLYHIT_OPTION_PROP_ONLY_CUT</option>
					<option value="fill">MOD_RECENTLYHIT_OPTION_PROP_FILL</option>
					<option value="transparent">MOD_RECENTLYHIT_OPTION_PROP_TRANSP</option>
					<!--<option value="stretch">MOD_RECENTLYHIT_OPTION_PROP_STRECH</option>-->
				</field>
				
				<field name="thumb_bg" type="text" default="#FFFFFF" 
					label="MOD_RECENTLYHIT_FIELD_THUMB_BACKGROUND_LABEL" 
					description="MOD_RECENTLYHIT_FIELD_THUMB_BACKGROUND_DESC" 
				/>
				
				<field name="thumb_type" type="list" default="" 
					label="MOD_RECENTLYHIT_FIELD_THUMB_TYPE_LABEL"
					description="MOD_RECENTLYHIT_FIELD_THUMB_TYPE_DESC"
				>
					<option value="">MOD_RECENTLYHIT_OPTION_THUMB_TYPE_PRESERVE</option>
					<option value="png">MOD_RECENTLYHIT_OPTION_THUMB_TYPE_PNG</option>
					<option value="gif">MOD_RECENTLYHIT_OPTION_THUMB_TYPE_GIF</option>
					<option value="jpeg">MOD_RECENTLYHIT_OPTION_THUMB_TYPE_JPEG</option>
				</field>

			</fieldset>

			<fieldset
				name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />					
				
				<field
					name="style"
					type="radio"
					default="1"
					label="MOD_RECENTLYHIT_FIELD_ADD_STYLE_LABEL"
					description="MOD_RECENTLYHIT_FIELD_ADD_STYLE_DESC">
					<option
						value="1">JYES</option>
					<option
						value="0">JNO</option>
				</field>

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
